@model EditEventFormModel;

<h2>Delete Event</h2>

<hr />

<form method="post" asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" disabled="true" />
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start</label>
                <input asp-for="StartDate" class="form-control" disabled="true" />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End</label>
                <input asp-for="EndDate" class="form-control" disabled="true" />
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label">Place</label>
                <input asp-for="Place" class="form-control" disabled="true" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>